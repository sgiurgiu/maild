[Unit]
Description=Maild
#After=network.target   
Requires=postgresql.service
After=postgresql.service


[Service]
Type=simple
ExecStart=/usr/bin/maild -c /etc/maild/maild.conf -l /etc/maild/log.properties
User=maild
Group=maild
Restart=on-abort

[Install]
WantedBy=multi-user.target default.target

